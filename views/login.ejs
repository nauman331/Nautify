<%- include('partials/header') %>

    <body class="bg-[#dadada] overflow-hidden">
        <!-- component -->

        <div class="min-h-screen p-5 m-5 py-6 flex flex-col justify-center sm:py-12">
            <div class="relative py-3 sm:max-w-xl sm:mx-auto">
                <div
                    class="absolute inset-0 bg-gradient-to-r from-yellow-300 to-yellow-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
                </div>
                <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
                    <div class="max-w-screen mx-auto">
                        <h1 class="text-xl font-semibold">
                            Login to explore
                            <span class="text-2xl font-bold text-yellow-600">Nautify</span>
                        </h1>

                        <% if(error.length> 0) { %>
                            <p class="text-red-600 font-bold text-sm mt-2 -mb-2">
                                <%= error %>
                            </p>
                            <% } %>


                                <div class="divide-y divide-gray-200">
                                    <form action="/login" method="post"
                                        class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                                        <div class="relative">
                                            <input autocomplete="off" id="username" name="username" type="text"
                                                class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 hover:border-yellow-400 text-yellow-900 focus:outline-none focus:borer-rose-600"
                                                placeholder="username" required />
                                            <label for="username"
                                                class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-yellow-600 peer-focus:text-sm">UserName
                                            </label>
                                        </div>

                                        <div class="relative">
                                            <input autocomplete="off" id="password" name="password" type="password"
                                                class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 hover:border-yellow-400 text-yellow-900 focus:outline-none focus:borer-rose-600"
                                                placeholder="Password" required />
                                            <label for="password"
                                                class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-yellow-600 peer-focus:text-sm">Password</label>
                                        </div>
                                        <div class="relative flex justify-between items-center">
                                            <input type="submit" value="Submit"
                                                class="bg-yellow-500 text-white rounded-md px-2 py-1 cursor-pointer" />
                                            <a href="/"
                                                class="text-sm font-bold text-yellow-600 underline cursor-pointer">Forgot
                                                Password
                                            </a>
                                        </div>
                                        <div class="flex justify-center items-center">
                                            <p class="text-sm">Don't have an account?</p>
                                            <a href="/"
                                                class="text-sm font-bold text-yellow-600 underline cursor-pointer">Sign
                                                Up</a>
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>